import sys
from PyQt5.QtWidgets import QApplication, QWidget, QLineEdit
from PyQt5.QtWidgets import QCheckBox


class WidgetsHideNSeek(QWidget):
    def __init__(self):
        super().__init__()
        self.edit1 = None
        self.edit2 = None
        self.edit3 = None
        self.edit4 = None
        self.checkbox1 = None
        self.checkbox2 = None
        self.checkbox3 = None
        self.checkbox4 = None
        self.initUI()

    def initUI(self):
        self.setGeometry(100, 100, 460, 200)
        self.setWindowTitle('Прятки для виджетов')
        self.edit1 = QLineEdit('Поле edit1', self)
        self.edit1.move(70, 12)
        self.edit1.hide()
        self.edit2 = QLineEdit('Поле edit2', self)
        self.edit2.move(70, 38)
        self.edit2.hide()
        self.edit3 = QLineEdit('Поле edit3', self)
        self.edit3.move(70, 64)
        self.edit3.hide()
        self.edit4 = QLineEdit('Поле edit4', self)
        self.edit4.move(70, 90)
        self.edit4.hide()
        self.checkbox1 = QCheckBox('edit1', self)
        self.checkbox1.move(10, 14)
        self.checkbox1.stateChanged.connect(lambda: self.hiders(self.edit1))
        self.checkbox2 = QCheckBox('edit2', self)
        self.checkbox2.move(10, 40)
        self.checkbox2.stateChanged.connect(lambda: self.hiders(self.edit2))
        self.checkbox3 = QCheckBox('edit3', self)
        self.checkbox3.move(10, 66)
        self.checkbox3.stateChanged.connect(lambda: self.hiders(self.edit3))
        self.checkbox4 = QCheckBox('edit4', self)
        self.checkbox4.move(10, 90)
        self.checkbox4.stateChanged.connect(lambda: self.hiders(self.edit4))

    def hiders(self, x):
        self.x = x
        if self.x.isHidden():
            self.x.show()
        else:
            self.x.hide()


if __name__ == '__main__':
    app = QApplication(sys.argv)
    hide = WidgetsHideNSeek()
    hide.show()
    sys.exit(app.exec())
